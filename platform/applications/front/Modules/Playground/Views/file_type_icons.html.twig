{% extends 'default_layout.html.twig' %}

{% block content %}

{% if file_extensions is not empty %}

                        <table class="ui celled striped selectable compact table">

                            <thead>

                                <tr>
                                    <th class="four wide">File Name</th>
                                    <th class="four wide">Icon Class</th>
                                    <th class="two wide">Icon</th>
                                    <th class="four wide">Icon Class (Outline)</th>
                                    <th class="two wide">Icon (Outline)</th>
                                </tr>

                            </thead>

                            <tfoot class="mobile hidden">

                                <tr>
                                    <th>File Name</th>
                                    <th>Icon Class</th>
                                    <th>Icon</th>
                                    <th>Icon Class (Outline)</th>
                                    <th>Icon (Outline)</th>
                                </tr>

                            </tfoot>

                            <tbody>

    {% for ext in file_extensions %}
        {% set file_name = 'x.' ~ ext %}
        {% set icon_class = file_type_icon(file_name) %}
                                <tr>
                                    <td>{{ file_name }}</td>
                                    <td>file {{ icon_class }} icon</td>
                                    <td><i class="file {{ icon_class }} big icon"></i></td>
                                    <td>file {{ icon_class }} outline icon</td>
                                    <td><i class="file {{ icon_class }} outline big icon"></i></td>
                                </tr>
    {% endfor %}

                            </tbody>

                        </table>

{% endif %}

{% endblock %}
